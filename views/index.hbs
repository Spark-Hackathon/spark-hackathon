{{#each page.alternateDivs}}
	<section class="row">
		<div class="wrapper">
			<div class="grid_layout {{#if this.isFlipped}}isFlipped{{/if}}">
				{{#if this.isFlipped}}
					<div class="text">
						<div class="wrapper">
							<h6>{{this.title}}</h6>
							<p>{{this.description}}</p>
						</div>
					</div>
				{{/if}}

				<img src="{{this.img_src}}" alt="{{this.img_alt}}">

				<div class="text">
					<div class="wrapper">
						<h6>{{this.title}}</h6>
						<p>{{this.description}}</p>
					</div>
				</div>
			</div>
		</div>
	</section>
{{/each}}

{{> header}}